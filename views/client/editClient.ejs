<% layout('layouts/boilerplate') %>




    <div class="row">
        <h1 class="text-center">Edit client </h1>
        <div class="col-6 offset-3">
            <form action="/allClient/<%= client._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Client name</label>
                    <input class="form-control" type="text" id="title" name="allClient[title]"
                        value="<%= client.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">location</label>
                    <input class="form-control" type="text" id="location" name="allClient[location]"
                        value="<%= client.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Img</label>
                    <input class="form-control" type="text" id="image" name="allClient[image]"
                        value="<%= client.image %>">
                </div>

                <button class="btn btn-dark mb-3">Update client</button>
            </form>
            <a class="btn  btn-dark  mb-3" href="/allClient/<%= client._id %>" role="button">Back to client
                tests</a>
        </div>

    </div>